    <properties>
        <opencga.version>1.0.0-rc1</opencga.version>
        <java.version>1.8</java.version>
        <biodata.version>0.8.2</biodata.version>
        <cellbase.version>4.5.0-beta</cellbase.version>
        <java-common-libs.version>3.3.1</java-common-libs.version>
        <hpg-bigdata.version>0.6.0</hpg-bigdata.version>
        <jackson.version>2.6.6</jackson.version>
        <jersey.version>2.23</jersey.version>
        <hadoop.version>2.7.1</hadoop.version>
        <hbase.version>1.1.2</hbase.version>
        <!--<hbase.version>1.0.0</hbase.version>&lt;!&ndash; -cdh5.7.0 &ndash;&gt;-->
