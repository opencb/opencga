{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "apiVersion": "2018-08-01",
            "name": "vnet",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "ipConfigurations": [],
                            "delegations": [],
                            "serviceEndpoints": [
                                {
                                    "service": "Microsoft.Storage"
                                }
                            ],
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'nsg-default')]"
                            }
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "averecluster",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24",
                            "ipConfigurations": [],
                            "delegations": [],
                            "serviceEndpoints": [
                                {
                                    "service": "Microsoft.Storage"
                                }
                            ],
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'nsg-averecluster')]"
                            }
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "solr",
                        "properties": {
                            "addressPrefix": "10.0.2.0/24",
                            "ipConfigurations": [],
                            "delegations": [],
                            "serviceEndpoints": [],
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'nsg-solr')]"
                            }
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "mongodb",
                        "properties": {
                            "addressPrefix": "10.0.3.0/24",
                            "ipConfigurations": [],
                            "delegations": [],
                            "serviceEndpoints": [],
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'nsg-mongodb')]"
                            }
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "daemon",
                        "properties": {
                            "addressPrefix": "10.0.4.0/24",
                            "ipConfigurations": [],
                            "delegations": [],
                            "serviceEndpoints": [],
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'nsg-daemon')]"
                            }
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "hdinsight",
                        "properties": {
                            "addressPrefix": "10.0.5.0/24",
                            "ipConfigurations": [],
                            "delegations": [],
                            "serviceEndpoints": [],
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'nsg-hdinsight')]"
                            }
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        }
    ],
    "outputs": {
        "vnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet')]"
        },
        "virtualNetworkName": {
            "type": "string",
            "value": "vnet"
        },
        "defaultSubnetId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'vnet')).subnets[0].id]"
        },
        "avereSubnetName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'vnet')).subnets[1].name]"
        },
        "hdinsightSubnetId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'vnet')).subnets[5].id]"
        },
        "avereClusterSubnetId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'vnet')).subnets[1].id]"
        },
        "solrSubnetId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'vnet')).subnets[2].id]"
        },
        "mongoSubnetId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'vnet')).subnets[3].id]"
        },
        "daemonSubnetId" : {
            "type" : "string",
            "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', 'vnet')).subnets[4].id]"
        }
    }
}