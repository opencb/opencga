{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "diskType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "clusterName": {
      "type": "string",
      "defaultValue": "opencga",
      "metadata": {
        "description": "Cluster name"
      }
    },
    "solrVMSize": {
      "type": "string",
      "defaultValue": "Standard_E8_v3",
      "metadata": {
        "description": "Size of the VM"
      }
    },
    "zookeeperVMSize": {
      "type": "string",
      "defaultValue": "Standard_D2_v2",
      "metadata": {
        "description": "Size of the zookeeper VM"
      }
    },
    "clusterLoginUserName": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      }
    },
    "clusterLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      }
    },
    "highAvailability": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": ""
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "subnetId": {
      "type": "string",
      "metadata": {
        "description": "Subnet ID."
      }
    },
    "solrVersion": {
      "type": "string",
      "defaultValue": "6.6",
      "metadata": {
        "description": "Version of Apache Solr."
      }
    },
    "solrDiskSizeGB": {
      "type": "int",
      "defaultValue": 512,
      "metadata": {
        "description": "Size of the data disk for Solr."
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Artifacts location."
      }
    },
    "_artifactsLocationSasToken": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Artifacts location SAS token."
      }
    }
  },
  "variables": {
    "availabilitySetName": "[concat(parameters('clusterName'), '-solr-as')]",
    "scaleNumber": "[if(parameters('highAvailability'), 2, 1)]",
    "zookeeperScaleNumber": "[if(parameters('highAvailability'), 3, 0)]",
    "customScriptFilePath": "[concat(parameters('_artifactsLocation'), '/solr/solr-setup.sh')]",
    "configSetLocation": "http://docs.opencb.org/download/attachments/9240577/OpenCGAConfSet_1.4.x.tar.gz",
    "imagePublisher": "Canonical",
    "imageOffer": "UbuntuServer",
    "imageSKU": "18.04-LTS",
    "copy": [
      {
        "name": "vmNames",
        "count": "[variables('scaleNumber')]",
        "input": {
          "vmName": "[concat(parameters('clusterName'), '-solr',copyIndex())]",
          "nicName": "[concat(parameters('clusterName'), '-solr', copyIndex(), '-nic')]",
          "diskName": "[concat(parameters('clusterName'), '-solr', copyIndex(), '-disk')]"
        }
      },
      {
        "name" : "solrURLs",
        "count": "[variables('scaleNumber')]",
        "input" : {
          "host" : "[concat('http://',parameters('clusterName'), '-solr',copyIndex(), ':8983/solr')]"
        }
      },
      {
        "name" : "zookeeperHosts",
        "count" : "[if(equals(0, variables('zookeeperScaleNumber')), 1, variables('zookeeperScaleNumber'))]",
        "input" : {
          "host" : "[concat(parameters('clusterName'), '-zookeeper', copyIndex(), ':2181')]"
        }
      }
    ],
    "cloudInit": [
      "#cloud-config",
      "",
      "package_upgrade: true",
      "package_reboot_if_required: true",
      "",
      "runcmd:",
      " - export DEBIAN_FRONTEND='noninteractive'",
      " - curl -fsSL https://get.docker.com/ | sh",
      " - curl -fsSL https://get.docker.com/gpg | sudo apt-key add -",
      "[concat(' - curl -fsSL ',variables('configSetLocation'), ' -o OpenCGAConfSet_1.4.x.tar.gz')]",
      "[concat(' - curl -fsSL ',variables('customScriptFilePath'),' | bash -s -- #VM_INDEX# ', parameters('clusterName'), '-zookeeper', ' ', variables('zookeeperScaleNumber'), ' ', parameters('solrVersion'))]"      
  ]
  },
  "resources": [
    {
      "condition": "[parameters('highAvailability')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "zookeeper",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/solr/zookeeper/azuredeploy.json', parameters('_artifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "clusterLoginUserName": {
            "value": "[parameters('clusterLoginUserName')]"
          },
          "clusterLoginPassword": {
            "value": "[parameters('clusterLoginPassword')]"
          },
          "subnetId": {
            "value": "[parameters('subnetId')]"
          },
          "scaleNumber": {
            "value": "[variables('zookeeperScaleNumber')]"
          },
          "vmSize": {
            "value": "[parameters('zookeeperVMSize')]"
          },
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/availabilitySets",
      "location": "[parameters('location')]",
      "name": "[variables('availabilitySetName')]",
      "properties": {
        "PlatformUpdateDomainCount": 20,
        "PlatformFaultDomainCount": 2
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "apiVersion": "2018-08-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('vmNames')[copyIndex()].nicName]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "foo",
        "count": "[variables('scaleNumber')]"
      },
      "dependsOn": [],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('subnetId')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmNames')[copyIndex()].vmName]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "foo",
        "count": "[variables('scaleNumber')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('vmNames')[copyIndex()].nicName)]",
        "[concat('Microsoft.Compute/availabilitySets/', variables('availabilitySetName'))]"
      ],
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('availabilitySetName'))]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('solrVMSize')]"
        },
        "osProfile": {
          "computerName": "[variables('vmNames')[copyIndex()].vmName]",
          "adminUsername": "[parameters('clusterLoginUserName')]",
          "adminPassword": "[parameters('clusterLoginPassword')]",
          "customData": "[base64(replace(replace(replace(replace(string(variables('cloudInit')),'#VM_INDEX#',string(copyIndex())),'\",\"','\n'),'[\"',''),'\"]',''))]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[variables('vmNames')[copyIndex()].diskName]",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "diskSizeGB": "[parameters('solrDiskSizeGB')]",
            "managedDisk": {
              "storageAccountType": "[parameters('diskType')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmNames')[copyIndex()].nicName)]"
            }
          ]
        }
      }
    }
  ],
  "outputs" : {
    "solrConnectionDetails" : {
      "value": "[if(equals(0, variables('zookeeperScaleNumber')), variables('solrURLs'), variables('zookeeperHosts'))]",
      "type": "array"
    },
    "solrURLs" : {
      "value": "[variables('solrURLs')]",
      "type": "array"
    }
  }
}
