{
  "name": "Example Pipeline",
  "version": "1",
  "description": "A sample bioinformatics pipeline configuration.",
  "input": {
    "indexDir": "/home/imedina/soft/index-dir",
    "samples": [
      {
        "id": "s1",
        "files": ["fastq", "fastq"],
        "somatic": false,
        "role": "father"
      },
      {
        "id": "s2",
        "files": ["fastq", "fastq"],
        "somatic": true,
        "role": "mother"
      },
      {
        "id": "son",
        "files": ["fastq", "fastq"],
        "somatic": false,
        "role": "child"
      }
    ]
  },
  "steps": [
    {
      "id": "quality-control",
      "options": {
      },
      "tool": {
        "id": "fastqc",
        "parameters": {
          "threads": 4
        }
      }
    },
    {
      "id": "alignment",
      "options": {
        "clean": true,
        "cram": false,
        "qc": true
      },
      "tool": {
        "id": "bwa",
        "parameters": {
          "t": 4
        }
      }
    },
    {
      "id": "variant-calling",
      "options": {
        "clean": true,
        "qc": true
      },
      "tools": [
        {
          "id": "gatk",
          "options": {
            "joint": true,
            "mendelianError": false
          },
          "parameters": {

          }
        },
        {
          "id": "freebayes",
          "parameters": {
            "ploidy": 2,
            "min-alternate-fraction": 0.2
          }
        }
      ]
    }
  ]
}