    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <id>my_install</id>
                        <goals>
                            <goal>install</goal>
                        </goals>
                        <configuration>
                            <!--<generatePom>false</generatePom>-->
                            <!--<pomFile></pomFile>-->
                        </configuration>
