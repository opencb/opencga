<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="logLevel">${sys:opencga.log.level:-info}</Property>
        <Property name="mongoLogLevel">${sys:opencga.test.mongo.log.level:-info}</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %m%n"/>
            <ThresholdFilter level="${logLevel}" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
        <!-- MongoDB Driver Loggers - suppress noise -->
        <Logger name="org.mongodb.driver.cluster" level="WARN"/>
        <Logger name="org.mongodb.driver.connection" level="WARN"/>
        <Logger name="org.mongodb.driver.protocol.command" level="WARN"/>
        <Logger name="org.mongodb.driver.protocol.insert" level="WARN"/>
        <Logger name="org.mongodb.driver.protocol.query" level="WARN"/>
        <Logger name="org.mongodb.driver.protocol.update" level="WARN"/>

        <!-- Embedded MongoDB Loggers - suppress noise during tests -->
        <Logger name="de.flapdoodle.embed.mongo" level="${mongoLogLevel}"/>
        <Logger name="de.flapdoodle.embed.process" level="${mongoLogLevel}"/>
        <Logger name="de.flapdoodle.reverse" level="${mongoLogLevel}"/>

        <!-- OpenCGA Embedded MongoDB Manager - configurable -->
        <Logger name="org.opencb.opencga.catalog.managers.EmbeddedMongoDBManager" level="${mongoLogLevel}"/>
    </Loggers>
</Configuration>

